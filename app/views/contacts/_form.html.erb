<h2 class="text-center">CONTACT US</h2>
<div align="center" class="contact-body text-center form-inputs reg-form text-center form-align">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'SEND MESSAGE', :class => "button-hover form-align", 'data-text' => 'SEND MESSAGE' %>
    </div>
  <% end %>
</div>
<div>
  <% flash.each do |key, value| %>
    <div>
      <a href="#" data-dismiss="alert">Ã—</a>
        <%= value %>
    </div>
  <% end %>
</div>
