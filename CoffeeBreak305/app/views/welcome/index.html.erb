<!-- main banner -->
<div id="banner">
  <div class="jumbotron jumbotron-welcome container-fluid text-center">
    <h1 class="coffeebreak">
      CoffeeBreak
    </h1>
    <p>
      Get your fix.
    </p>
    <!-- sign up button -->
    <%= link_to 'SIGN UP', new_user_registration_path, class: "button-hover", data: { text: "SIGN UP" } %>
    <!-- sign up button ends -->
  </div>
</div>
<!-- main banner ends -->

<!-- How It Works section begins -->
